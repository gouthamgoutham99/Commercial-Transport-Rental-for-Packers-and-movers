<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Header Title -->
    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Available Trucks"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- City Dropdown -->
    <AutoCompleteTextView
        android:id="@+id/citySpinner"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Select City"
        android:drawableEnd="@drawable/drop_down"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:focusable="true"
        android:clickable="true"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#888888"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Body Type Dropdown -->
    <AutoCompleteTextView
        android:id="@+id/bodyTypeSpinner"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Select Body Type"
        android:drawableEnd="@drawable/drop_down"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:focusable="true"
        android:clickable="true"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#888888"
        app:layout_constraintTop_toBottomOf="@id/citySpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Button -->
    <Button
        android:id="@+id/btnViewTrucks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Trucks"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/bodyTypeSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
