<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state (optional) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD"/> <!-- Light blue when pressed -->
            <stroke android:width="1dp" android:color="#1976D2"/> <!-- Dark blue border -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Light gray border -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
