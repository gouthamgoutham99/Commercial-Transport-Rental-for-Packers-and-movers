<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:background="@android:color/darker_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/orderIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: "
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/truckNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Truck:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/truckStyleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style:"/>

    <TextView
        android:id="@+id/truckTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"/>

    <TextView
        android:id="@+id/truckColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"/>

    <TextView
        android:id="@+id/totalFareTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare:"/>

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"/>

    <TextView
        android:id="@+id/dateRangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dates:"/>

    <!-- âœ… Changed: Now only Pickup Time -->
    <TextView
        android:id="@+id/pickupTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Time:"/>

</LinearLayout>
