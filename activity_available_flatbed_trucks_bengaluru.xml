<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:id="@+id/availableTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Flatbed Trucks"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingBottom="16dp"/>

        <!-- Truck 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tata_signa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TATA"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Style: Tata Signa 5525.S Truck   Type: Manual   Color: White"
                android:textColor="#555555"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 70 / Km"
                android:textColor="#009688"
                android:textStyle="bold"
                android:paddingTop="4dp" />

            <Button
                android:id="@+id/bookNow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1976D2"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Truck 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F9F9F9"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bharatbenz_flat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BHARAT BENZ"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Style: BharatBenz 3723R   Type: Manual   Color: White"
                android:textColor="#555555"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 75 / Km"
                android:textColor="#009688"
                android:textStyle="bold"
                android:paddingTop="4dp" />

            <Button
                android:id="@+id/bookNow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1976D2"
                android:layout_marginTop="8dp" />
        </LinearLayout>
        <!-- Repeat more trucks as needed below -->

    </LinearLayout>
</ScrollView>
