<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦ Order Tracking"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Order ID Input -->
        <EditText
            android:id="@+id/orderIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Order ID"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Track Button -->
        <Button
            android:id="@+id/trackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track"
            android:layout_gravity="center"
            android:padding="12dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />

        <!-- Tracking Steps -->
        <LinearLayout
            android:id="@+id/trackingSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/stepBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âšª Booking Completed"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/stepPlanning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âšª Order Under Planning"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/stepOnWay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âšª On the Way"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/stepReached"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âšª Reached Destination"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
